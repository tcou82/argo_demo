apiVersion: apps/v1 # for versions before 1.9.0 use apps/v1beta2
kind: Deployment
metadata:
  name: y77hwdiff
spec:
  selector:
    matchLabels:
      app: y77hwdiff
  replicas: 1 # un sel pod pour demo
  template:
    metadata:
      labels:
        app: y77hwdiff
    spec:
      containers:
      - name: y77hwdiff
        image: hw_demo:1.0.0
        ports:
        - containerPort: 80
apiVersion: v1
kind: Service
metadata:
  name: y77hwdiff
  labels:
    run: y77hwdiff
spec:
  ports:
  - port: 80
    protocol: TCP
  selector:
    run: y77hwdiff
    
